<p id="notice"><%= notice %></p>

<h1>Listing Timesheets</h1>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th>Team size</th>
      <th>Duration</th>
      <th>Submition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.project_name %></td>
        <td><%= timesheet.team_size %></td>
        <td><%= timesheet.duration %></td>
        <td><%= timesheet.submition %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', show_timesheet_path %></button></td>
        <td><button class="btn btn-info"><%= link_to 'Edit', edit_timesheet_path(timesheet) %></button></td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', timesheet, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-info"><%= link_to 'New Timesheet', new_timesheet_path %></button>

